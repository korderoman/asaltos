extends layout.pug

block content
    section(class="container mt-5")
        form(method="POST" enctype="multipart/form-data")
            div(class="d-flex flex-row justify-content-center")
                div(class="mb-3 row")
                    div(class="col-auto")
                        input(class="form-control", type="file", id="file", name="file", required, accept=".mp4")
                    div(class="col-auto")
                        button(type="submit" class="btn btn-primary mb-3")="Subir video"


